{
  "name": "@mysite/backend",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "eslint-plugin-node": "^11.1.0",
    "prisma": "^6.7.0"
  },
  "scripts": {
    "test": "jest --runInBand",
    "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pmt": "dotenv -e ./.env.test prisma migrate deploy",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --loglevel warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}' '!**/{node_modules,dist}/**/*'",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@mysite/front": "workspace:*",
    "@mysite/shared": "workspace:*",
    "@prisma/client": "^6.7.0",
    "@trpc/server": "^10.45.2",
    "axios": "^1.10.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "serialize-error": "8.1.0",
    "superjson": "^2.2.2",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.24.2"
  }
}
